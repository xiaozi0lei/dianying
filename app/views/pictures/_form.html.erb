<div class="row">
  <div class="col-md-2">
  </div>

  <div class="col-md-8">
    <div>
      <%= form_for @picture, :html => { class: "form-horizontal" } do |f| %>
        <% if @picture.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>
            <ul>
            <% @picture.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="form-group">
          <div class="col-md-2">
            <%= f.label :name, class: "btn btn-default" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2">
            <%= f.label :description, class: "btn btn-default" %>
          </div>
          <div class="col-md-9">
            <%= f.text_area :description, class: "form-control", rows: 8, style: "width: 100%" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2">
            <%= f.label :picture %>
          </div>
          <div class="col-md-9">
            <%= f.file_field :picture %>
          </div>
        </div>

        <div>
          <%= f.submit class: "btn btn-default" %>
          <%= link_to 'Back', pictures_path, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-1">
  </div>
</div>
