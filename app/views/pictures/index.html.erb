<div class="row">
  <div class="col-md-2">
    <%= link_to "Add Picture", new_picture_path %>
  </div>

  <div class="col-md-8">
    <div>
      <% @pictures.in_groups_of(4) do |group| %>
          <% group.compact.each do |picture| %>
            <div class="col-md-3">
              <%= image_tag picture.picture_url, :width => '100%' if picture.picture.present?%>
              <h4><%= link_to picture.name, picture %></h4>
              <%= picture.description %>
              <%= picture.picture_url %>
            </div>
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-md-1">
  </div>
</div>

