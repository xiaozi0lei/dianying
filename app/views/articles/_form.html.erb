<%= form_for @article, :html => { class: "form-horizontal" } do |f| %>
  <% if @article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-1">
      <%= f.label :title, class: "btn btn-default" %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <p>
    <%= f.text_area :text, class: "form-control", rows: 30, style: "width: 100%" %>
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </p>

  <!-- 添加tags -->
  <%= f.label :tag_list, "Tags (separated by commas)" %>
  <div class="form-group">

    <div class="col-md-6">
    <%= f.text_field :tag_list, class: "form-control" %>
    </div>
  </div>

  <div>
    <%= f.check_box(:sticky) %>
    <%= f.label(:sticky, "Sticky Top") %>
  </div>

  <p>
    <%= f.submit :class => "btn btn-default" %>
    <%= link_to 'Back', articles_path, :class => "btn btn-default" %>
  </p>
<% end %>

