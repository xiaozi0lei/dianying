<h2 class="text-center">Listing Articles</h2>

<p>
<% if session[:user_id] != nil && session[:user_id] < 4 %>
  <a href="<%= new_article_path %>"><button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-star"></span> New Article </button></a>
<% end %>
</p>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Time</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><b><%= link_to article.title, article_path(article) %></b></td>
      <td><%= article.created_at.to_s(:short) %></td>
      <% if session[:user_id] != nil && session[:user_id] < 4 %>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
    </tr>
  <% end %>
</table>
