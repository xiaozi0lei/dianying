<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
<h3 class="text-center" style="color: green">
  <%= flash[:success] %>
</h3>
<h4 class="text-center" style="color: red">
  <%= flash[:error] %>
</h4>
<% unless @receipts.nil? %>
  <% @receipts.each do |receipt| %>
    message:
    <br />
    <%= receipt.message.subject %>
    <br />
    <%= receipt.message.body %>
    <br />
    read:
    <%= receipt.is_read? %>
    <br />
  <% end %>
<% end %>
