<h1 class="text-center">Sign Up</h1>

<%= form_for @user, :html => { class: "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited
      this user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-3">
      <%= f.label :name, class: "btn btn-default" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-3">
      <%= f.label :email, class: "btn btn-default" %>
    </div>
    <div id="test_email" class="col-md-4">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-3">
      <%= f.label :password, class: "btn btn-default" %>
    </div>
    <div id="test_passwd" class="col-md-4">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-3">
      <%= f.label :confirmation, class: "btn btn-default" %>
    </div>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <p class="text-center">
    <%= f.submit class: "btn btn-default" %>
    <%= link_to 'Back', sign_up_path, class: "btn btn-default" %>
  </p>
<% end %>
