<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <h2 style="color: red"><%= flash.now[:alert] %></h2>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Sign in" %></p>
<% end %>
